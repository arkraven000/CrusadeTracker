<Defaults>
    <!-- Text defaults -->
    <Text fontSize="14" color="#FFFFFF" />

    <!-- Button defaults with state colors: normal|highlighted|pressed|disabled -->
    <Button fontSize="14"
            colors="#DDDDDD|#FFFFFF|#AAAAAA|#555555"
            textColor="#111111" />

    <!-- Toggle defaults with state colors -->
    <Toggle fontSize="12"
            colors="#888888|#AAAAAA|#666666|#444444" />

    <!-- Input defaults -->
    <InputField fontSize="14"
                characterLimit="100"
                color="#222222"
                textColor="#FFFFFF"
                placeholder="..." />

    <!-- Dropdown defaults -->
    <Dropdown fontSize="14"
              color="#333333"
              textColor="#FFFFFF"
              itemTextColor="#FFFFFF"
              itemBackgroundColors="#333333|#555555" />
</Defaults>

<!-- Main UI Container -->
<Panel id="crusadeTrackerUI"
       position="0 0 -50"
       rotation="0 0 0"
       width="400"
       height="600"
       padding="10 10 10 10"
       color="rgba(0,0,0,0.8)"
       allowDragging="true"
       returnToOriginalPositionWhenReleased="false"
       active="true">

    <!-- Main Menu Panel -->
    <Panel id="mainMenuPanel"
           width="100%"
           height="100%"
           active="true">

        <VerticalLayout spacing="15" padding="20">
            <Text fontSize="24" alignment="MiddleCenter">
                CRUSADE CAMPAIGN TRACKER
            </Text>

            <Text fontSize="12" alignment="MiddleCenter" color="#CCCCCC">
                Warhammer 40,000 10th Edition
            </Text>

            <Panel height="20" />

            <Button id="mainMenu_newCampaign"
                    height="50"
                    onClick="onUIButtonClick">
                New Campaign
            </Button>

            <Button id="mainMenu_loadCampaign"
                    height="50"
                    onClick="onUIButtonClick">
                Load Campaign
            </Button>

            <Button id="mainMenu_settings"
                    height="50"
                    onClick="onUIButtonClick">
                Settings
            </Button>

            <Panel height="40" />

            <Text fontSize="10" alignment="MiddleCenter" color="#888888">
                Version 1.0.0-alpha
            </Text>
        </VerticalLayout>
    </Panel>

    <!-- Campaign Setup Wizard -->
    <Panel id="campaignSetupPanel"
           width="100%"
           height="100%"
           active="false">

        <VerticalLayout spacing="10" padding="15">
            <Text fontSize="20" alignment="MiddleCenter">
                Campaign Setup
            </Text>

            <!-- Step Indicator -->
            <HorizontalLayout spacing="5" height="30">
                <Panel id="setupStep1Indicator" width="20%" height="100%" color="#FFFF00" />
                <Panel id="setupStep2Indicator" width="20%" height="100%" color="#CCCCCC" />
                <Panel id="setupStep3Indicator" width="20%" height="100%" color="#CCCCCC" />
                <Panel id="setupStep4Indicator" width="20%" height="100%" color="#CCCCCC" />
                <Panel id="setupStep5Indicator" width="20%" height="100%" color="#CCCCCC" />
            </HorizontalLayout>

            <!-- Step Content Area -->
            <Panel id="setupContentArea" width="100%" height="400" />

            <!-- Navigation Buttons -->
            <HorizontalLayout spacing="10" height="40">
                <Button id="campaignSetup_cancel"
                        width="30%"
                        onClick="onUIButtonClick">
                    Cancel
                </Button>

                <Button id="campaignSetup_previous"
                        width="30%"
                        onClick="onUIButtonClick">
                    Previous
                </Button>

                <Button id="campaignSetup_next"
                        width="40%"
                        onClick="onUIButtonClick">
                    Next
                </Button>
            </HorizontalLayout>
        </VerticalLayout>
    </Panel>

    <!-- Main Campaign Panel -->
    <Panel id="mainCampaignPanel"
           width="100%"
           height="100%"
           active="false">

        <VerticalLayout spacing="10" padding="15">
            <Text id="mainPanel_campaignName"
                  fontSize="18"
                  alignment="MiddleCenter">
                Campaign Name
            </Text>

            <Panel height="5" />

            <!-- Quick Stats -->
            <HorizontalLayout spacing="10" height="60">
                <Panel width="33%" color="rgba(50,50,50,0.8)" padding="5">
                    <VerticalLayout>
                        <Text id="mainPanel_playerCount" fontSize="16">2 Players</Text>
                        <Text fontSize="10" color="#AAAAAA">Active</Text>
                    </VerticalLayout>
                </Panel>

                <Panel width="33%" color="rgba(50,50,50,0.8)" padding="5">
                    <VerticalLayout>
                        <Text id="mainPanel_battleCount" fontSize="16">5 Battles</Text>
                        <Text fontSize="10" color="#AAAAAA">Fought</Text>
                    </VerticalLayout>
                </Panel>

                <Panel width="33%" color="rgba(50,50,50,0.8)" padding="5">
                    <VerticalLayout>
                        <Text id="mainPanel_territoryCount" fontSize="16">12 Hexes</Text>
                        <Text fontSize="10" color="#AAAAAA">Controlled</Text>
                    </VerticalLayout>
                </Panel>
            </HorizontalLayout>

            <!-- Action Buttons -->
            <VerticalLayout spacing="8">
                <Button id="mainPanel_playerMgmt"
                        height="45"
                        onClick="onUIButtonClick">
                    Manage Players
                </Button>

                <Button id="mainPanel_map"
                        height="45"
                        onClick="onUIButtonClick">
                    View Map
                </Button>

                <Button id="mainPanel_log"
                        height="45"
                        onClick="onUIButtonClick">
                    Campaign Log
                </Button>

                <Button id="mainPanel_recordBattle"
                        height="45"
                        colors="#FF8800|#FFAA33|#CC6600|#664400"
                        textColor="#FFFFFF"
                        onClick="onUIButtonClick">
                    Record Battle
                </Button>

                <Button id="mainPanel_battleLog"
                        height="45"
                        onClick="onUIButtonClick">
                    Battle History
                </Button>

                <Button id="mainPanel_settings"
                        height="45"
                        onClick="onUIButtonClick">
                    Settings
                </Button>

                <Panel height="10" />

                <Button id="mainPanel_save"
                        height="45"
                        colors="#00AA00|#00CC00|#008800|#004400"
                        textColor="#FFFFFF"
                        onClick="onUIButtonClick">
                    Save Campaign
                </Button>
            </VerticalLayout>
        </VerticalLayout>
    </Panel>

    <!-- Settings Panel -->
    <Panel id="settingsPanel"
           width="100%"
           height="100%"
           active="false">

        <VerticalLayout spacing="10" padding="15">
            <Text fontSize="18">Settings</Text>

            <!-- Tab Buttons -->
            <HorizontalLayout spacing="5" height="35">
                <Button id="settings_tabGeneral" onClick="onUIButtonClick">General</Button>
                <Button id="settings_tabMap" onClick="onUIButtonClick">Map</Button>
                <Button id="settings_tabDisplay" onClick="onUIButtonClick">Display</Button>
            </HorizontalLayout>

            <!-- Map Skin Section -->
            <Text fontSize="14">Map Skin</Text>
            <VerticalLayout spacing="5">
                <Button id="settings_mapSkin_forgeWorld" onClick="onUIButtonClick">Forge World</Button>
                <Button id="settings_mapSkin_deathWorld" onClick="onUIButtonClick">Death World</Button>
                <Button id="settings_mapSkin_hiveCity" onClick="onUIButtonClick">Hive City</Button>
                <Button id="settings_mapSkin_spaceHulk" onClick="onUIButtonClick">Space Hulk</Button>
                <Button id="settings_mapSkin_iceWorld" onClick="onUIButtonClick">Ice World</Button>
                <Button id="settings_mapSkin_desert" onClick="onUIButtonClick">Desert</Button>
            </VerticalLayout>

            <!-- Display Options -->
            <Panel height="10" />
            <Text fontSize="14">Display Options</Text>
            <Toggle id="settings_toggleHexGuides"
                    onValueChanged="onUIButtonClick">
                Show Hex Guides
            </Toggle>

            <Panel height="20" />

            <Button id="settings_close"
                    onClick="onUIButtonClick">
                Close
            </Button>
        </VerticalLayout>
    </Panel>

    <!-- Campaign Log Panel -->
    <Panel id="campaignLogPanel"
           width="100%"
           height="100%"
           active="false">

        <VerticalLayout spacing="10" padding="15">
            <Text fontSize="18">Campaign Log</Text>

            <!-- Filter Buttons -->
            <HorizontalLayout spacing="5" height="30">
                <Button id="campaignLog_filterAll" onClick="onUIButtonClick">All</Button>
                <Button id="campaignLog_filterBattles" onClick="onUIButtonClick">Battles</Button>
                <Button id="campaignLog_filterUnits" onClick="onUIButtonClick">Units</Button>
                <Button id="campaignLog_filterPlayers" onClick="onUIButtonClick">Players</Button>
            </HorizontalLayout>

            <!-- Log Content Area -->
            <Panel id="campaignLog_content"
                   width="100%"
                   height="450"
                   color="rgba(20,20,20,0.9)">
                <Text fontSize="12" color="#AAAAAA">
                    Campaign events will appear here...
                </Text>
            </Panel>

            <Button id="campaignLog_close"
                    onClick="onUIButtonClick">
                Close
            </Button>
        </VerticalLayout>
    </Panel>

    <!-- Manage Forces Panel (Phase 3) -->
    <Panel id="manageForcesPanel"
           width="100%"
           height="100%"
           active="false">

        <VerticalLayout spacing="10" padding="15">
            <Text fontSize="18">Manage Forces - Order of Battle</Text>

            <!-- Player Selector -->
            <HorizontalLayout spacing="10" height="40">
                <Text width="25%">Player:</Text>
                <Dropdown id="manageForces_playerSelect"
                         width="75%"
                         onChange="onUIButtonClick">
                </Dropdown>
            </HorizontalLayout>

            <!-- Supply Display -->
            <Panel id="manageForces_supplyPanel"
                   width="100%"
                   height="50"
                   color="rgba(20,20,20,0.9)"
                   padding="10">
                <VerticalLayout spacing="5">
                    <Text id="manageForces_supplyText" fontSize="14">
                        Supply: 0 / 50 PL
                    </Text>
                    <Panel id="manageForces_supplyBar"
                           width="100%"
                           height="10"
                           color="#00FF00" />
                </VerticalLayout>
            </Panel>

            <!-- Search and Sort -->
            <HorizontalLayout spacing="10" height="35">
                <InputField id="manageForces_search"
                           width="60%"
                           placeholder="Search units..."
                           onValueChanged="onUIButtonClick" />
                <Dropdown id="manageForces_sortBy"
                         width="40%"
                         onChange="onUIButtonClick">
                    <Option value="name">Name</Option>
                    <Option value="role">Role</Option>
                    <Option value="xp">XP</Option>
                    <Option value="rank">Rank</Option>
                    <Option value="cp">CP</Option>
                </Dropdown>
            </HorizontalLayout>

            <!-- Unit List Area -->
            <Panel id="manageForces_unitList"
                   width="100%"
                   height="300"
                   color="rgba(20,20,20,0.9)">
                <Text fontSize="12" color="#AAAAAA">
                    No units in roster. Click "Add Unit" to begin.
                </Text>
            </Panel>

            <!-- Pagination -->
            <HorizontalLayout spacing="10" height="30">
                <Button id="manageForces_prevPage"
                        width="30%"
                        onClick="onUIButtonClick">
                    Previous
                </Button>
                <Text id="manageForces_pageInfo" width="40%" alignment="MiddleCenter">
                    Page 1 / 1 (0 units)
                </Text>
                <Button id="manageForces_nextPage"
                        width="30%"
                        onClick="onUIButtonClick">
                    Next
                </Button>
            </HorizontalLayout>

            <!-- Action Buttons -->
            <HorizontalLayout spacing="10" height="40">
                <Button id="manageForces_addUnit"
                        width="33%"
                        onClick="onUIButtonClick">
                    Add Unit
                </Button>
                <Button id="manageForces_import"
                        width="33%"
                        onClick="onUIButtonClick">
                    Import
                </Button>
                <Button id="manageForces_close"
                        width="33%"
                        onClick="onUIButtonClick">
                    Close
                </Button>
            </HorizontalLayout>
        </VerticalLayout>
    </Panel>

    <!-- Unit Details Panel (Phase 3) -->
    <Panel id="unitDetailsPanel"
           width="100%"
           height="100%"
           active="false">

        <VerticalLayout spacing="10" padding="15">
            <Text id="unitDetails_title" fontSize="18">Unit Editor</Text>

            <!-- Basic Info Section -->
            <Panel width="100%" height="200" color="rgba(20,20,20,0.9)" padding="10">
                <VerticalLayout spacing="8">
                    <Text fontSize="14" color="#FFFF00">Basic Information</Text>

                    <HorizontalLayout spacing="5" height="30">
                        <Text width="30%">Unit Name:</Text>
                        <InputField id="unitDetails_name"
                                   width="70%"
                                   placeholder="Enter unit name..."
                                   onValueChanged="onUIButtonClick" />
                    </HorizontalLayout>

                    <HorizontalLayout spacing="5" height="30">
                        <Text width="30%">Unit Type:</Text>
                        <InputField id="unitDetails_unitType"
                                   width="70%"
                                   placeholder="e.g., Intercessor Squad"
                                   onValueChanged="onUIButtonClick" />
                    </HorizontalLayout>

                    <HorizontalLayout spacing="5" height="30">
                        <Text width="30%">Role:</Text>
                        <InputField id="unitDetails_role"
                                   width="70%"
                                   placeholder="Battlefield Role"
                                   onValueChanged="onUIButtonClick" />
                    </HorizontalLayout>

                    <HorizontalLayout spacing="5" height="30">
                        <Text width="30%">Points:</Text>
                        <InputField id="unitDetails_points"
                                   width="30%"
                                   characterLimit="4"
                                   onValueChanged="onUIButtonClick" />
                        <Text width="40%" fontSize="12" color="#CCCCCC">Power Level / Points Cost</Text>
                    </HorizontalLayout>

                    <HorizontalLayout spacing="10" height="25">
                        <Toggle id="unitDetails_toggleCharacter" onClick="onUIButtonClick">CHARACTER</Toggle>
                        <Toggle id="unitDetails_toggleTitanic" onClick="onUIButtonClick">TITANIC</Toggle>
                        <Toggle id="unitDetails_toggleEpicHero" onClick="onUIButtonClick">EPIC HERO</Toggle>
                    </HorizontalLayout>
                </VerticalLayout>
            </Panel>

            <!-- Progression Section -->
            <Panel width="100%" height="120" color="rgba(20,20,20,0.9)" padding="10">
                <VerticalLayout spacing="8">
                    <Text fontSize="14" color="#FFFF00">Progression</Text>

                    <HorizontalLayout spacing="10" height="25">
                        <Text id="unitDetails_xpText" width="40%">Experience: 0 XP</Text>
                        <Text id="unitDetails_rankText" width="60%">Rank: 1 - Battle-Ready</Text>
                    </HorizontalLayout>

                    <Text id="unitDetails_crusadePoints" fontSize="16" color="#00FF00" alignment="MiddleCenter">
                        Crusade Points: 0
                    </Text>

                    <Text id="unitDetails_cpBreakdown" fontSize="10" color="#AAAAAA">
                        Honours: 0 CP | Scars: -0 CP
                    </Text>
                </VerticalLayout>
            </Panel>

            <!-- Battle Honours Section -->
            <Panel width="100%" height="80" color="rgba(20,20,20,0.9)" padding="10">
                <VerticalLayout spacing="5">
                    <HorizontalLayout spacing="10" height="30">
                        <Text id="unitDetails_honoursHeader" width="70%">Battle Honours (0 / 3)</Text>
                        <Button id="unitDetails_addHonour"
                                width="30%"
                                onClick="onUIButtonClick">
                            Add
                        </Button>
                    </HorizontalLayout>
                    <Panel id="unitDetails_honoursList" width="100%" height="40">
                        <Text fontSize="10" color="#888888">No honours yet</Text>
                    </Panel>
                </VerticalLayout>
            </Panel>

            <!-- Save/Cancel Buttons -->
            <HorizontalLayout spacing="10" height="40">
                <Button id="unitDetails_cancel"
                        width="50%"
                        onClick="onUIButtonClick">
                    Cancel
                </Button>
                <Button id="unitDetails_save"
                        width="50%"
                        onClick="onUIButtonClick"
                        colors="#00CC00|#00FF00|#009900|#004400"
                        textColor="#FFFFFF">
                    Save Unit
                </Button>
            </HorizontalLayout>
        </VerticalLayout>
    </Panel>

    <!-- New Recruit Import Panel (Phase 3) -->
    <Panel id="newRecruitImportPanel"
           width="100%"
           height="100%"
           active="false">

        <VerticalLayout spacing="10" padding="15">
            <Text fontSize="18">Import from New Recruit</Text>

            <Text fontSize="12" color="#CCCCCC">
                Paste the JSON export from newrecruit.eu below:
            </Text>

            <!-- JSON Input Area -->
            <InputField id="newRecruit_jsonInput"
                       width="100%"
                       height="400"
                       characterLimit="10000"
                       lineType="MultiLine"
                       placeholder="Paste New Recruit JSON here..."
                       onValueChanged="onUIButtonClick" />

            <!-- Import Status -->
            <Text id="newRecruit_status" fontSize="12" color="#FFFF00">
                Ready to import
            </Text>

            <!-- Action Buttons -->
            <HorizontalLayout spacing="10" height="40">
                <Button id="newRecruit_cancel"
                        width="50%"
                        onClick="onUIButtonClick">
                    Cancel
                </Button>
                <Button id="newRecruit_import"
                        width="50%"
                        onClick="onUIButtonClick"
                        colors="#00CC00|#00FF00|#009900|#004400"
                        textColor="#FFFFFF">
                    Import Units
                </Button>
            </HorizontalLayout>
        </VerticalLayout>
    </Panel>

    <!-- Record Battle Panel (3-Step Workflow) -->
    <Panel id="recordBattlePanel"
           width="100%"
           height="100%"
           active="false">

        <VerticalLayout spacing="10" padding="15">
            <Text fontSize="20" alignment="MiddleCenter">
                Record Battle
            </Text>

            <!-- Step Indicator -->
            <HorizontalLayout spacing="5" height="30">
                <Panel id="recordBattleStep1Indicator" width="33%" height="100%" color="#FFFF00" />
                <Panel id="recordBattleStep2Indicator" width="33%" height="100%" color="#CCCCCC" />
                <Panel id="recordBattleStep3Indicator" width="33%" height="100%" color="#CCCCCC" />
            </HorizontalLayout>

            <HorizontalLayout spacing="10" height="20">
                <Text width="33%" alignment="MiddleCenter" fontSize="10">Setup</Text>
                <Text width="33%" alignment="MiddleCenter" fontSize="10">Results</Text>
                <Text width="33%" alignment="MiddleCenter" fontSize="10">Post-Battle</Text>
            </HorizontalLayout>

            <!-- Step 1: Battle Setup -->
            <Panel id="recordBattleStep1Panel"
                   width="100%"
                   height="400"
                   active="true">

                <VerticalLayout spacing="10">
                    <Text fontSize="16">Battle Setup</Text>

                    <!-- Battle Size -->
                    <HorizontalLayout spacing="10" height="30">
                        <Text width="30%">Battle Size:</Text>
                        <Dropdown id="recordBattle_battleSize"
                                  width="70%"
                                  onValueChanged="onRecordBattleDropdownChange">
                            <Option>Incursion</Option>
                            <Option selected="true">Strike Force</Option>
                            <Option>Onslaught</Option>
                        </Dropdown>
                    </HorizontalLayout>

                    <!-- Mission Type -->
                    <HorizontalLayout spacing="10" height="30">
                        <Text width="30%">Mission:</Text>
                        <InputField id="recordBattle_missionType"
                                    width="70%"
                                    placeholder="Mission name"
                                    onValueChanged="onRecordBattleInputChange" />
                    </HorizontalLayout>

                    <!-- Mission Pack -->
                    <HorizontalLayout spacing="10" height="30">
                        <Text width="30%">Mission Pack:</Text>
                        <InputField id="recordBattle_missionPack"
                                    width="70%"
                                    placeholder="Optional"
                                    onValueChanged="onRecordBattleInputChange" />
                    </HorizontalLayout>

                    <!-- Hex Location -->
                    <HorizontalLayout spacing="10" height="30">
                        <Text width="30%">Hex Location:</Text>
                        <InputField id="recordBattle_hexLocation"
                                    width="70%"
                                    placeholder="e.g., 0,0"
                                    onValueChanged="onRecordBattleInputChange" />
                    </HorizontalLayout>

                    <Panel height="10" />
                    <Text fontSize="14">Participants (will be populated dynamically)</Text>
                    <Panel id="recordBattle_participantsContainer" height="150" />
                </VerticalLayout>
            </Panel>

            <!-- Step 2: Battle Results -->
            <Panel id="recordBattleStep2Panel"
                   width="100%"
                   height="400"
                   active="false">

                <VerticalLayout spacing="10">
                    <Text fontSize="16">Battle Results</Text>

                    <Text fontSize="12" color="#AAAAAA">
                        Enter battle outcome, victory points, and casualties
                    </Text>

                    <Panel height="10" />
                    <Text fontSize="14">Winner Selection (will be populated dynamically)</Text>
                    <Panel id="recordBattle_winnerContainer" height="80" />

                    <Panel height="10" />
                    <Text fontSize="14">Destroyed Units (will be populated dynamically)</Text>
                    <Panel id="recordBattle_destroyedContainer" height="150" />

                    <Panel height="10" />
                    <Text fontSize="14">Combat Tallies (will be populated dynamically)</Text>
                    <Panel id="recordBattle_talliesContainer" height="100" />
                </VerticalLayout>
            </Panel>

            <!-- Step 3: Post-Battle -->
            <Panel id="recordBattleStep3Panel"
                   width="100%"
                   height="400"
                   active="false">

                <VerticalLayout spacing="10">
                    <Text fontSize="16">Post-Battle</Text>

                    <Text fontSize="12" color="#AAAAAA">
                        XP awards, Out of Action tests, and agendas
                    </Text>

                    <Panel height="10" />
                    <Text fontSize="14">Marked for Greatness (will be populated dynamically)</Text>
                    <Panel id="recordBattle_markedContainer" height="100" />

                    <Panel height="10" />
                    <Text fontSize="14">Out of Action Tests (will be populated dynamically)</Text>
                    <Panel id="recordBattle_outOfActionContainer" height="150" />

                    <Panel height="10" />
                    <Text fontSize="14">Battle Summary</Text>
                    <Text id="recordBattle_summary" fontSize="12" color="#00FF00">
                        XP and Out of Action results will appear here
                    </Text>
                </VerticalLayout>
            </Panel>

            <!-- Navigation Buttons -->
            <HorizontalLayout spacing="10" height="40">
                <Button id="recordBattle_cancel"
                        width="30%"
                        onClick="onRecordBattleButtonClick">
                    Cancel
                </Button>

                <Button id="recordBattle_previous"
                        width="30%"
                        onClick="onRecordBattleButtonClick">
                    Previous
                </Button>

                <Button id="recordBattle_next"
                        width="40%"
                        onClick="onRecordBattleButtonClick">
                    Next
                </Button>
            </HorizontalLayout>
        </VerticalLayout>
    </Panel>

    <!-- Battle Log Panel -->
    <Panel id="battleLogPanel"
           width="100%"
           height="100%"
           active="false">

        <VerticalLayout spacing="10" padding="15">
            <Text fontSize="20" alignment="MiddleCenter">
                Battle History
            </Text>

            <!-- Filters -->
            <HorizontalLayout spacing="10" height="30">
                <Text width="20%">Filter:</Text>
                <Dropdown id="battleLog_filterPlayer"
                          width="40%"
                          onValueChanged="onBattleLogDropdownChange">
                    <Option selected="true">All Players</Option>
                </Dropdown>

                <Dropdown id="battleLog_filterBattleSize"
                          width="40%"
                          onValueChanged="onBattleLogDropdownChange">
                    <Option selected="true">All Sizes</Option>
                    <Option>Incursion</Option>
                    <Option>Strike Force</Option>
                    <Option>Onslaught</Option>
                </Dropdown>
            </HorizontalLayout>

            <!-- Sort -->
            <HorizontalLayout spacing="10" height="30">
                <Text width="20%">Sort by:</Text>
                <Dropdown id="battleLog_sortBy"
                          width="50%"
                          onValueChanged="onBattleLogDropdownChange">
                    <Option selected="true">Newest First</Option>
                    <Option>Oldest First</Option>
                    <Option>Most Participants</Option>
                    <Option>Battle Size</Option>
                </Dropdown>

                <Button id="battleLog_clearFilters"
                        width="30%"
                        onClick="onBattleLogButtonClick">
                    Clear Filters
                </Button>
            </HorizontalLayout>

            <!-- Stats -->
            <HorizontalLayout spacing="5" height="40">
                <Text id="battleLog_battleCount" width="50%" fontSize="12">
                    Total Battles: 0
                </Text>
                <Text id="battleLog_filterIndicator" width="50%" fontSize="12" color="#AAAAAA">
                    Filters: None
                </Text>
            </HorizontalLayout>

            <Panel height="5" />

            <!-- Battle List Panel -->
            <Panel id="battleListPanel"
                   width="100%"
                   height="350"
                   active="true">

                <VerticalLayout spacing="5">
                    <Text fontSize="14">Battle List (will be populated dynamically)</Text>
                    <Panel id="battleLog_battleListContainer" height="300" />
                </VerticalLayout>
            </Panel>

            <!-- Battle Details Panel -->
            <Panel id="battleDetailsPanel"
                   width="100%"
                   height="350"
                   active="false">

                <VerticalLayout spacing="10">
                    <HorizontalLayout spacing="10" height="30">
                        <Text id="battleDetails_missionType" width="70%" fontSize="16">
                            Mission Name
                        </Text>
                        <Button id="battleLog_closeBattleDetails"
                                width="30%"
                                onClick="onBattleLogButtonClick">
                            Back to List
                        </Button>
                    </HorizontalLayout>

                    <Text id="battleDetails_battleSize" fontSize="12">Battle Size</Text>
                    <Text id="battleDetails_timestamp" fontSize="12" color="#AAAAAA">Timestamp</Text>
                    <Text id="battleDetails_winner" fontSize="14" color="#00FF00">Winner</Text>
                    <Text id="battleDetails_participants" fontSize="12">Participants</Text>

                    <Panel height="10" />
                    <Text fontSize="14">Detailed Information</Text>
                    <Panel id="battleDetails_detailsContainer" height="150" />
                </VerticalLayout>
            </Panel>

            <!-- Pagination -->
            <HorizontalLayout spacing="10" height="35">
                <Button id="battleLog_previousPage"
                        width="25%"
                        onClick="onBattleLogButtonClick">
                    &lt; Prev
                </Button>

                <Text id="battleLog_pageIndicator"
                      width="50%"
                      alignment="MiddleCenter"
                      fontSize="12">
                    Page 1 of 1
                </Text>

                <Button id="battleLog_nextPage"
                        width="25%"
                        onClick="onBattleLogButtonClick">
                    Next &gt;
                </Button>
            </HorizontalLayout>

            <!-- Close Button -->
            <Button id="battleLog_close"
                    height="40"
                    onClick="onUIButtonClick">
                Close
            </Button>
        </VerticalLayout>
    </Panel>

</Panel>

<Defaults>
    <Text fontSize="14" color="#FFFFFF" />
    <Button fontSize="14" colors="#FFFFFF|#CCCCCC|#999999|#666666" />
    <Toggle fontSize="12" />
    <InputField fontSize="14" characterLimit="100" />
</Defaults>

<!-- Main UI Container -->
<Panel id="crusadeTrackerUI"
       position="0 0 -50"
       rotation="0 0 0"
       width="400"
       height="600"
       padding="10 10 10 10"
       color="rgba(0,0,0,0.8)"
       active="true">

    <!-- Main Menu Panel -->
    <Panel id="mainMenuPanel"
           width="100%"
           height="100%"
           active="true">

        <VerticalLayout spacing="15" padding="20">
            <Text fontSize="24" alignment="MiddleCenter">
                CRUSADE CAMPAIGN TRACKER
            </Text>

            <Text fontSize="12" alignment="MiddleCenter" color="#CCCCCC">
                Warhammer 40,000 10th Edition
            </Text>

            <Panel height="20" />

            <Button id="mainMenu_newCampaign"
                    height="50"
                    onClick="UICore.onButtonClick">
                New Campaign
            </Button>

            <Button id="mainMenu_loadCampaign"
                    height="50"
                    onClick="UICore.onButtonClick">
                Load Campaign
            </Button>

            <Button id="mainMenu_settings"
                    height="50"
                    onClick="UICore.onButtonClick">
                Settings
            </Button>

            <Panel height="40" />

            <Text fontSize="10" alignment="MiddleCenter" color="#888888">
                Version 1.0.0-alpha
            </Text>
        </VerticalLayout>
    </Panel>

    <!-- Campaign Setup Wizard -->
    <Panel id="campaignSetupPanel"
           width="100%"
           height="100%"
           active="false">

        <VerticalLayout spacing="10" padding="15">
            <Text fontSize="20" alignment="MiddleCenter">
                Campaign Setup
            </Text>

            <!-- Step Indicator -->
            <HorizontalLayout spacing="5" height="30">
                <Panel id="setupStep1Indicator" width="20%" height="100%" color="#FFFF00" />
                <Panel id="setupStep2Indicator" width="20%" height="100%" color="#CCCCCC" />
                <Panel id="setupStep3Indicator" width="20%" height="100%" color="#CCCCCC" />
                <Panel id="setupStep4Indicator" width="20%" height="100%" color="#CCCCCC" />
                <Panel id="setupStep5Indicator" width="20%" height="100%" color="#CCCCCC" />
            </HorizontalLayout>

            <!-- Step Content Area -->
            <Panel id="setupContentArea" width="100%" height="400" />

            <!-- Navigation Buttons -->
            <HorizontalLayout spacing="10" height="40">
                <Button id="campaignSetup_cancel"
                        width="30%"
                        onClick="UICore.onButtonClick">
                    Cancel
                </Button>

                <Button id="campaignSetup_previous"
                        width="30%"
                        onClick="UICore.onButtonClick">
                    Previous
                </Button>

                <Button id="campaignSetup_next"
                        width="40%"
                        onClick="UICore.onButtonClick">
                    Next
                </Button>
            </HorizontalLayout>
        </VerticalLayout>
    </Panel>

    <!-- Main Campaign Panel -->
    <Panel id="mainCampaignPanel"
           width="100%"
           height="100%"
           active="false">

        <VerticalLayout spacing="10" padding="15">
            <Text id="mainPanel_campaignName"
                  fontSize="18"
                  alignment="MiddleCenter">
                Campaign Name
            </Text>

            <Panel height="5" />

            <!-- Quick Stats -->
            <HorizontalLayout spacing="10" height="60">
                <Panel width="33%" color="rgba(50,50,50,0.8)" padding="5">
                    <VerticalLayout>
                        <Text id="mainPanel_playerCount" fontSize="16">2 Players</Text>
                        <Text fontSize="10" color="#AAAAAA">Active</Text>
                    </VerticalLayout>
                </Panel>

                <Panel width="33%" color="rgba(50,50,50,0.8)" padding="5">
                    <VerticalLayout>
                        <Text id="mainPanel_battleCount" fontSize="16">5 Battles</Text>
                        <Text fontSize="10" color="#AAAAAA">Fought</Text>
                    </VerticalLayout>
                </Panel>

                <Panel width="33%" color="rgba(50,50,50,0.8)" padding="5">
                    <VerticalLayout>
                        <Text id="mainPanel_territoryCount" fontSize="16">12 Hexes</Text>
                        <Text fontSize="10" color="#AAAAAA">Controlled</Text>
                    </VerticalLayout>
                </Panel>
            </HorizontalLayout>

            <!-- Action Buttons -->
            <VerticalLayout spacing="8">
                <Button id="mainPanel_playerMgmt"
                        height="45"
                        onClick="UICore.onButtonClick">
                    Manage Players
                </Button>

                <Button id="mainPanel_map"
                        height="45"
                        onClick="UICore.onButtonClick">
                    View Map
                </Button>

                <Button id="mainPanel_log"
                        height="45"
                        onClick="UICore.onButtonClick">
                    Campaign Log
                </Button>

                <Button id="mainPanel_settings"
                        height="45"
                        onClick="UICore.onButtonClick">
                    Settings
                </Button>

                <Panel height="10" />

                <Button id="mainPanel_save"
                        height="45"
                        color="#00AA00"
                        onClick="UICore.onButtonClick">
                    Save Campaign
                </Button>
            </VerticalLayout>
        </VerticalLayout>
    </Panel>

    <!-- Settings Panel -->
    <Panel id="settingsPanel"
           width="100%"
           height="100%"
           active="false">

        <VerticalLayout spacing="10" padding="15">
            <Text fontSize="18">Settings</Text>

            <!-- Tab Buttons -->
            <HorizontalLayout spacing="5" height="35">
                <Button id="settings_tabGeneral" onClick="UICore.onButtonClick">General</Button>
                <Button id="settings_tabMap" onClick="UICore.onButtonClick">Map</Button>
                <Button id="settings_tabDisplay" onClick="UICore.onButtonClick">Display</Button>
            </HorizontalLayout>

            <!-- Map Skin Section -->
            <Text fontSize="14">Map Skin</Text>
            <VerticalLayout spacing="5">
                <Button id="settings_mapSkin_forgeWorld" onClick="UICore.onButtonClick">Forge World</Button>
                <Button id="settings_mapSkin_deathWorld" onClick="UICore.onButtonClick">Death World</Button>
                <Button id="settings_mapSkin_hiveCity" onClick="UICore.onButtonClick">Hive City</Button>
                <Button id="settings_mapSkin_spaceHulk" onClick="UICore.onButtonClick">Space Hulk</Button>
                <Button id="settings_mapSkin_iceWorld" onClick="UICore.onButtonClick">Ice World</Button>
                <Button id="settings_mapSkin_desert" onClick="UICore.onButtonClick">Desert</Button>
            </VerticalLayout>

            <!-- Display Options -->
            <Panel height="10" />
            <Text fontSize="14">Display Options</Text>
            <Toggle id="settings_toggleHexGuides"
                    onValueChanged="UICore.onButtonClick">
                Show Hex Guides
            </Toggle>

            <Panel height="20" />

            <Button id="settings_close"
                    onClick="UICore.onButtonClick">
                Close
            </Button>
        </VerticalLayout>
    </Panel>

    <!-- Campaign Log Panel -->
    <Panel id="campaignLogPanel"
           width="100%"
           height="100%"
           active="false">

        <VerticalLayout spacing="10" padding="15">
            <Text fontSize="18">Campaign Log</Text>

            <!-- Filter Buttons -->
            <HorizontalLayout spacing="5" height="30">
                <Button id="campaignLog_filterAll" onClick="UICore.onButtonClick">All</Button>
                <Button id="campaignLog_filterBattles" onClick="UICore.onButtonClick">Battles</Button>
                <Button id="campaignLog_filterUnits" onClick="UICore.onButtonClick">Units</Button>
                <Button id="campaignLog_filterPlayers" onClick="UICore.onButtonClick">Players</Button>
            </HorizontalLayout>

            <!-- Log Content Area -->
            <Panel id="campaignLog_content"
                   width="100%"
                   height="450"
                   color="rgba(20,20,20,0.9)">
                <Text fontSize="12" color="#AAAAAA">
                    Campaign events will appear here...
                </Text>
            </Panel>

            <Button id="campaignLog_close"
                    onClick="UICore.onButtonClick">
                Close
            </Button>
        </VerticalLayout>
    </Panel>

    <!-- Manage Forces Panel (Phase 3) -->
    <Panel id="manageForcesPanel"
           width="100%"
           height="100%"
           active="false">

        <VerticalLayout spacing="10" padding="15">
            <Text fontSize="18">Manage Forces - Order of Battle</Text>

            <!-- Player Selector -->
            <HorizontalLayout spacing="10" height="40">
                <Text width="25%">Player:</Text>
                <Dropdown id="manageForces_playerSelect"
                         width="75%"
                         onChange="UICore.onButtonClick">
                </Dropdown>
            </HorizontalLayout>

            <!-- Supply Display -->
            <Panel id="manageForces_supplyPanel"
                   width="100%"
                   height="50"
                   color="rgba(20,20,20,0.9)"
                   padding="10">
                <VerticalLayout spacing="5">
                    <Text id="manageForces_supplyText" fontSize="14">
                        Supply: 0 / 50 PL
                    </Text>
                    <Panel id="manageForces_supplyBar"
                           width="100%"
                           height="10"
                           color="#00FF00" />
                </VerticalLayout>
            </Panel>

            <!-- Search and Sort -->
            <HorizontalLayout spacing="10" height="35">
                <InputField id="manageForces_search"
                           width="60%"
                           placeholder="Search units..."
                           onValueChanged="UICore.onButtonClick" />
                <Dropdown id="manageForces_sortBy"
                         width="40%"
                         onChange="UICore.onButtonClick">
                    <Option value="name">Name</Option>
                    <Option value="role">Role</Option>
                    <Option value="xp">XP</Option>
                    <Option value="rank">Rank</Option>
                    <Option value="cp">CP</Option>
                </Dropdown>
            </HorizontalLayout>

            <!-- Unit List Area -->
            <Panel id="manageForces_unitList"
                   width="100%"
                   height="300"
                   color="rgba(20,20,20,0.9)">
                <Text fontSize="12" color="#AAAAAA">
                    No units in roster. Click "Add Unit" to begin.
                </Text>
            </Panel>

            <!-- Pagination -->
            <HorizontalLayout spacing="10" height="30">
                <Button id="manageForces_prevPage"
                        width="30%"
                        onClick="UICore.onButtonClick">
                    Previous
                </Button>
                <Text id="manageForces_pageInfo" width="40%" alignment="MiddleCenter">
                    Page 1 / 1 (0 units)
                </Text>
                <Button id="manageForces_nextPage"
                        width="30%"
                        onClick="UICore.onButtonClick">
                    Next
                </Button>
            </HorizontalLayout>

            <!-- Action Buttons -->
            <HorizontalLayout spacing="10" height="40">
                <Button id="manageForces_addUnit"
                        width="33%"
                        onClick="UICore.onButtonClick">
                    Add Unit
                </Button>
                <Button id="manageForces_import"
                        width="33%"
                        onClick="UICore.onButtonClick">
                    Import
                </Button>
                <Button id="manageForces_close"
                        width="33%"
                        onClick="UICore.onButtonClick">
                    Close
                </Button>
            </HorizontalLayout>
        </VerticalLayout>
    </Panel>

    <!-- Unit Details Panel (Phase 3) -->
    <Panel id="unitDetailsPanel"
           width="100%"
           height="100%"
           active="false">

        <VerticalLayout spacing="10" padding="15">
            <Text id="unitDetails_title" fontSize="18">Unit Editor</Text>

            <!-- Basic Info Section -->
            <Panel width="100%" height="200" color="rgba(20,20,20,0.9)" padding="10">
                <VerticalLayout spacing="8">
                    <Text fontSize="14" color="#FFFF00">Basic Information</Text>

                    <HorizontalLayout spacing="5" height="30">
                        <Text width="30%">Unit Name:</Text>
                        <InputField id="unitDetails_name"
                                   width="70%"
                                   placeholder="Enter unit name..."
                                   onValueChanged="UICore.onButtonClick" />
                    </HorizontalLayout>

                    <HorizontalLayout spacing="5" height="30">
                        <Text width="30%">Unit Type:</Text>
                        <InputField id="unitDetails_unitType"
                                   width="70%"
                                   placeholder="e.g., Intercessor Squad"
                                   onValueChanged="UICore.onButtonClick" />
                    </HorizontalLayout>

                    <HorizontalLayout spacing="5" height="30">
                        <Text width="30%">Role:</Text>
                        <InputField id="unitDetails_role"
                                   width="70%"
                                   placeholder="Battlefield Role"
                                   onValueChanged="UICore.onButtonClick" />
                    </HorizontalLayout>

                    <HorizontalLayout spacing="5" height="30">
                        <Text width="30%">Points:</Text>
                        <InputField id="unitDetails_points"
                                   width="30%"
                                   characterLimit="4"
                                   onValueChanged="UICore.onButtonClick" />
                        <Text width="40%" fontSize="12" color="#CCCCCC">Power Level / Points Cost</Text>
                    </HorizontalLayout>

                    <HorizontalLayout spacing="10" height="25">
                        <Toggle id="unitDetails_toggleCharacter" onClick="UICore.onButtonClick">CHARACTER</Toggle>
                        <Toggle id="unitDetails_toggleTitanic" onClick="UICore.onButtonClick">TITANIC</Toggle>
                        <Toggle id="unitDetails_toggleEpicHero" onClick="UICore.onButtonClick">EPIC HERO</Toggle>
                    </HorizontalLayout>
                </VerticalLayout>
            </Panel>

            <!-- Progression Section -->
            <Panel width="100%" height="120" color="rgba(20,20,20,0.9)" padding="10">
                <VerticalLayout spacing="8">
                    <Text fontSize="14" color="#FFFF00">Progression</Text>

                    <HorizontalLayout spacing="10" height="25">
                        <Text id="unitDetails_xpText" width="40%">Experience: 0 XP</Text>
                        <Text id="unitDetails_rankText" width="60%">Rank: 1 - Battle-Ready</Text>
                    </HorizontalLayout>

                    <Text id="unitDetails_crusadePoints" fontSize="16" color="#00FF00" alignment="MiddleCenter">
                        Crusade Points: 0
                    </Text>

                    <Text id="unitDetails_cpBreakdown" fontSize="10" color="#AAAAAA">
                        XP: 0 (รท5 = 0 CP) | Honours: 0 CP | Scars: -0 CP
                    </Text>
                </VerticalLayout>
            </Panel>

            <!-- Battle Honours Section -->
            <Panel width="100%" height="80" color="rgba(20,20,20,0.9)" padding="10">
                <VerticalLayout spacing="5">
                    <HorizontalLayout spacing="10" height="30">
                        <Text id="unitDetails_honoursHeader" width="70%">Battle Honours (0 / 3)</Text>
                        <Button id="unitDetails_addHonour"
                                width="30%"
                                onClick="UICore.onButtonClick">
                            Add
                        </Button>
                    </HorizontalLayout>
                    <Panel id="unitDetails_honoursList" width="100%" height="40">
                        <Text fontSize="10" color="#888888">No honours yet</Text>
                    </Panel>
                </VerticalLayout>
            </Panel>

            <!-- Save/Cancel Buttons -->
            <HorizontalLayout spacing="10" height="40">
                <Button id="unitDetails_cancel"
                        width="50%"
                        onClick="UICore.onButtonClick">
                    Cancel
                </Button>
                <Button id="unitDetails_save"
                        width="50%"
                        onClick="UICore.onButtonClick"
                        color="#00FF00">
                    Save Unit
                </Button>
            </HorizontalLayout>
        </VerticalLayout>
    </Panel>

    <!-- New Recruit Import Panel (Phase 3) -->
    <Panel id="newRecruitImportPanel"
           width="100%"
           height="100%"
           active="false">

        <VerticalLayout spacing="10" padding="15">
            <Text fontSize="18">Import from New Recruit</Text>

            <Text fontSize="12" color="#CCCCCC">
                Paste the JSON export from newrecruit.eu below:
            </Text>

            <!-- JSON Input Area -->
            <InputField id="newRecruit_jsonInput"
                       width="100%"
                       height="400"
                       characterLimit="10000"
                       lineType="MultiLine"
                       placeholder="Paste New Recruit JSON here..."
                       onValueChanged="UICore.onButtonClick" />

            <!-- Import Status -->
            <Text id="newRecruit_status" fontSize="12" color="#FFFF00">
                Ready to import
            </Text>

            <!-- Action Buttons -->
            <HorizontalLayout spacing="10" height="40">
                <Button id="newRecruit_cancel"
                        width="50%"
                        onClick="UICore.onButtonClick">
                    Cancel
                </Button>
                <Button id="newRecruit_import"
                        width="50%"
                        onClick="UICore.onButtonClick"
                        color="#00FF00">
                    Import Units
                </Button>
            </HorizontalLayout>
        </VerticalLayout>
    </Panel>

</Panel>
